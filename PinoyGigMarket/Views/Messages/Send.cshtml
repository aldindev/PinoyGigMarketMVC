<h2>Send Message</h2>

<form asp-controller="Messages" asp-action="Send" method="post">
    <div class="form-group">
        <label asp-for="ReceiverFirstName" class="control-label">First Name</label>
        <input asp-for="ReceiverFirstName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ReceiverLastName" class="control-label">Last Name</label>
        <input asp-for="ReceiverLastName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label">Message</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="ReceiverId" />
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
</form>