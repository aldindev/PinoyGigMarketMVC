@model IEnumerable<PinoyGigMarket.Models.ProjectViewModel>

@{
    ViewData["Title"] = "My Active Gigs";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">My Active Gigs</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th class="text-center">
                                        Id
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th class="text-center">
                                        Status
                                    </th>
                                    <th class="text-center">
                                        Location
                                    </th>
                                    <th class="text-right">
                                        Budget
                                    </th>
                                    <th class="text-right">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var project in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @project.ProjectId
                                        </td>
                                        <td>
                                            @project.Title
                                        </td>
                                        <td>
                                            @project.Desc
                                        </td>
                                        <td class="text-center">
                                            @project.Status
                                        </td>
                                        <td class="text-left">
                                            @project.Location
                                        </td>
                                        <td class="text-right">
                                            @project.Budget.ToString()
                                        </td>
                                        <td class="text-right">
                                            <button type="button" rel="tooltip" class="btn btn-info btn-icon btn-sm ">
                                                <i class="fa fa-user"></i>
                                            </button>
                                            <button type="button" rel="tooltip" class="btn btn-success btn-icon btn-sm ">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <button type="button" rel="tooltip" class="btn btn-danger btn-icon btn-sm ">
                                                <i class="fa fa-times"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div>
                            <button class="btn btn-primary btn-round" id="show-add-gig-form">Post a Gig</button>
                        </div>
                        <div id="add-gig-container"></div>
                        <div id="edit-gig-container"></div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#show-add-gig-form').click(function () {
                $.get('@Url.Action("ShowAddGigForm", "GigsClient")', function (data) {
                    $('#add-gig-container').html(data);
                });
            });

            $(document).on('click', '#cancel-add-skill', function () {
                $('#add-gig-container').html('');
            });

            $('.delete-gig').click(function (e) {
                if (!confirm('Are you sure you want to delete this skill?')) {
                    e.preventDefault();
                }
            });

            $('.edit-gig').click(function () {
                var skillId = $(this).data('gig-id');
                $.get('@Url.Action("EditGig", "AppUser")/' + skillId, function (data) {
                    $('#edit-skill-container').html(data);
                });
            });

            $(document).on('click', '#cancel-edit-skill', function () {
                $('#edit-skill-container').html('');
            });
        });
    </script>
}