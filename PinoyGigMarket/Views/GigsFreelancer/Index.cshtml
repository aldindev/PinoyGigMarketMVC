@model IEnumerable<PinoyGigMarket.Models.ProjectViewModel>

@{

}

<div class="content">
    <div class="row">
        @foreach (var gig in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                <div class="card card-pricing">
                    <div class="card-header">
                        <h6 class="card-category">@gig.Title</h6>
                    </div>
                    <div class="card-body">
                        <div class="card-icon icon-primary">
                            <i class="nc-icon nc-spaceship"></i>
                        </div>
                        <h3 class="card-title">@gig.Budget</h3>
                        <ul>
                            <li>@gig.Desc</li>
                            <li><i class="fa fa-location-dot" aria-hidden="true" style="color: darkslategray;"></i>  @gig.Location</li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <!-- Form to submit project acceptance -->
                        <form asp-action="AcceptGig" asp-controller="GigsFreelancer" method="post">
                            <input type="hidden" name="projectId" value="@gig.ProjectId" />
                            <button type="submit" class="btn btn-outline-default btn-round">Accept this Gig</button>
                        </form>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

